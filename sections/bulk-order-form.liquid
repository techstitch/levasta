<link href="https://cdn.jsdelivr.net/npm/flowbite@2.2.1/dist/flowbite.min.css" rel="stylesheet">
<script src="https://cdn.tailwindcss.com"></script>

<div class="section py-20 px-5">
  <div class="max-w-7xl mx-auto bg-white rounded-3xl shadow-xl p-12 flex flex-wrap gap-12">
    <div class="flex-1 min-w-[320px]">
      <h2 class="text-3xl font-semibold mb-3">{{ section.settings.heading }}</h2>
      <p class="text-gray-500 mb-8">{{ section.settings.subtext }}</p>

      {% form 'contact', class: 'space-y-6' %}
        <div class="relative">
          <input
            type="text"
            name="contact[name]"
            required
            class="block px-4 py-4 w-full text-sm bg-gray-50 rounded-xl border border-gray-300 focus:border-black focus:ring-0 peer"
            placeholder=" "
          >
          <label
            class="
              absolute text-sm text-gray-500 duration-300 transform -translate-y-4 scale-75 top-2 left-4 bg-white px-2
              peer-focus:px-2 peer-focus:text-black peer-placeholder-shown:scale-100
              peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4
            "
          >
            Name *
          </label>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <input
              type="tel"
              name="contact[phone]"
              required
              class="block w-full px-4 py-4 text-sm bg-gray-50 border border-gray-300 rounded-xl focus:border-black focus:ring-0"
              placeholder="Phone *"
            >
          </div>

          <div>
            <input
              type="email"
              name="contact[email]"
              required
              class="block w-full px-4 py-4 text-sm bg-gray-50 border border-gray-300 rounded-xl focus:border-black focus:ring-0"
              placeholder="Email *"
            >
          </div>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <select
            name="contact[Chair Type]"
            required
            class="block w-full px-4 py-4 text-sm bg-gray-50 border border-gray-300 rounded-xl focus:border-black focus:ring-0"
          >
            <option value="">Chair Type *</option>
            {% for block in section.blocks %}
              <option value="{{ block.settings.chair_type }}">
                {{ block.settings.chair_type }}
              </option>
            {% endfor %}
          </select>

          <input
            type="number"
            name="contact[Quantity]"
            min="1"
            required
            class="block w-full px-4 py-4 text-sm bg-gray-50 border border-gray-300 rounded-xl focus:border-black focus:ring-0"
            placeholder="Quantity *"
          >
        </div>

        <div class="flex items-center gap-6 mt-4">
          <button
            type="submit"
            class="bg-black text-white px-8 py-4 rounded-xl hover:-translate-y-1 transition-all"
          >
            Get Quote
          </button>

          <span class="text-gray-400">Or</span>

          <a
            href="{{ section.settings.whatsapp_link }}"
            target="_blank"
            class="bg-green-500 text-white px-8 py-4 rounded-xl hover:-translate-y-1 transition-all"
          >
            WhatsApp Us
          </a>
        </div>
      {% endform %}
    </div>

    <div class="flex-1 min-w-[320px]">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          class="rounded-2xl w-full object-cover"
        >
      {% endif %}
    </div>
  </div>
</div>
