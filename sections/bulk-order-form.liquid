{% form 'contact', id: 'BulkOrderForm', class: 'bulk-order-form' %}
  <div class="bulk-form-wrapper">
    <input type="text" name="contact[name]" placeholder="Name *" required>

    <input type="tel" name="contact[phone]" placeholder="Phone *" required>

    <input type="email" name="contact[email]" placeholder="Mail *" required>

    <select name="contact[Chair Type]" required>
      <option value="">Chair Type *</option>
      <option value="Ergonomic">Ergonomic</option>
      <option value="Executive">Executive</option>
      <option value="Gaming">Gaming</option>
    </select>

    <input type="number" name="contact[Quantity]" placeholder="Quantity *" required min="1">

    <button type="submit">Get Quote</button>
  </div>
  {% if form.posted_successfully? %}
    <p class="form-success">Thanks. We'll contact you soon.</p>
  {% endif %}

  {% if form.errors %}
    {{ form.errors | default_errors }}
  {% endif %}
{% endform %}
