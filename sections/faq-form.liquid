<link rel="stylesheet" href="{{ 'faq-form.css' | asset_url }}">
<div class="section faq-form-section">
  <h2>{{ section.settings.heading }}</h2>
  <div class="faq-form-right">
    <p class="bulk-subtext">{{ section.settings.subtext }}</p>
    {% form 'contact', id: 'NeedHelpForm', class: 'need-help-form' %}
      {% if form.posted_successfully? and form.id == 'NeedHelpForm' %}
        <p class="form-success">Message sent successfully.</p>
      {% endif %}

      {% if form.errors %}
        <div class="form-error">{{ form.errors | default_errors }}</div>
      {% endif %}

      <div class="form-group">
        <input
          type="text"
          name="contact[name]"
          placeholder="Name *"
          required
        >
      </div>

      <div class="form-row">
        <input
          type="tel"
          name="contact[phone]"
          placeholder="Phone *"
          required
        >

        <input
          type="email"
          name="contact[email]"
          placeholder="Mail *"
          required
        >
      </div>

      <div class="form-group">
        <textarea
          name="contact[Message]"
          placeholder="Describe your concern *"
          rows="4"
          required
        >
        </textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="primary-btn">Send</button>
      </div>
    {% endform %}
  </div>
</div>
{% schema %}
{
  "name": "FAQ Form",
  "presets": [
    {
      "name": "FAQ Form"
    }
  ]
}
{% endschema %}
